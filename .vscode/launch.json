{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "xv6debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_kernel",
            // "stopAtEntry": true,
            "stopAtConnect": true,
            "cwd": "${workspaceFolder}",
            "miDebuggerServerAddress": "127.0.0.1:26000", //见.gdbinit 中 target remote xxxx:xx
            "miDebuggerPath": "/usr/bin/gdb-multiarch", // which gdb-multiarch
            // "miDebuggerPath": "/usr/local/bin/riscv64-unknown-elf-gdb",
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "pretty printing",
                    "text": "-enable-pretty-printing",
                },
                {
                    "description": "set output radix 16",
                    "text": "set output-radix 16"
                },
                // {
                //     "description": "Set charset to ASCII", 
                //     "text": "-gdb-set charset ASCII"
                // },
            ],
        }
    ]
}